{
  "manifest_version": 2,

  "name": "Chrome Video Sychronizer",
  "description": "This extension will sync the videos of multiple users",
  "version": "1.0",

  "permissions": [
    "storage",
    "tabs"
  ],

  "content_scripts": [
  {
    "js": ["mainController.js"]
  }
],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "SyncIcon.png",
    "default_popup": "SinglePage.html"
  },

  "permissions": [
    "activeTab",
    "storage"
  ]


}
